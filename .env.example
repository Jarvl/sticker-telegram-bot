# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_BOT_USERNAME=your_bot_username

# Sticker Pack Configuration (comma-separated list)
STICKER_PACKS=pack1_name,pack2_name,pack3_name
# User ID that will own the sticker pack (not the bot's user ID)
STICKER_PACK_OWNER_USER_ID=
# List of allowed Telegram Chat IDs
ALLOWED_CHAT_IDS=

# Running mode (either "webhook" or "polling")
MODE="polling"

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Optional: Webhook URL (if using webhooks instead of polling)
# WEBHOOK_URL=https://your-domain.com/webhook